<!-- Website Title -->
<div class="container">
    <div class="float-start">
        <h1>@ViewData["Title"]</h1>
    </div>

    <!-- Search Form -->
    <div class="float-end">
        <form asp-controller=@ViewData["Controller"] asp-action=@ViewData["Action"] method="get">
            <span class="btn-group">
                <input class="form-control" type="text" name="GlobalSearch" placeholder="Global Search"
                    value="@ViewBag.CurrentSearch" />
                &nbsp; &nbsp;
                <input class="btn btn-outline-success rounded" type="submit" value="Submit" />
                &nbsp; &nbsp;
                <a class="btn btn-outline-warning rounded" asp-action=@ViewData["Action"]> Clear </a>
            </span>
        </form>
    </div>
</div>