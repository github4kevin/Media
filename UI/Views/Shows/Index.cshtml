@model cloudscribe.Pagination.Models.PagedResult<Shows>

@{
    ViewData["Title"] = "Shows";
    ViewData["Controller"] = "Shows";
    ViewData["Action"] = "Index";
    int RowNumber = 0;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<partial name="_HeaderSearch" />

<br />

<div class="container">
    <p> &nbsp; &nbsp; </p>
<br />
    <partial name="_Pagination" />
</div>

<br />

@if (Model.Data.Count() > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Row
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                    asp-route-sortOrder="@ViewBag.ShowNameSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Show Name
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                    asp-route-sortOrder="@ViewBag.ShowSeasonSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Seasons
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                    asp-route-sortOrder="@ViewBag.ShowEpisodeSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Episodes
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                    asp-route-sortOrder="@ViewBag.ShowSizeSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Size
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                   asp-route-sortOrder="@ViewBag.ShowDurationSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Duration
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                    asp-route-sortOrder="@ViewBag.ShowQualitySort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Quality
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                   asp-route-sortOrder="@ViewBag.ShowReleaseDateSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Year
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                   asp-route-sortOrder="@ViewBag.ShowContentRatingSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Rating
                    </a>
                </th>
                <th class='text-nowrap'>
                    <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                       asp-route-sortOrder="@ViewBag.ShowRatingSort" asp-route-pageNumber="@Model.PageNumber">
                        <i class="fas fa-sort"></i>
                        Audience
                    </a>
                </th>
                @*<th>
                    Details
                </th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                RowNumber = RowNumber + 1;
                <tr>
                    <td>
                        @RowNumber
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.show_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.show_seasons)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.show_episodes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.show_size)
                    </td>
                    <td class='text-nowrap'>
                        @Html.DisplayFor(modelItem => item.show_duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.show_quality)
                    </td>                    
                    <td class='text-nowrap'>
                        @Html.DisplayFor(modelItem => item.show_release_date)
                    </td>

                    <td class='text-nowrap'>
                        @Html.DisplayFor(modelItem => item.show_content_rating)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.show_rating)
                    </td>
                    @*<td>
                        <a asp-controller="Shows" asp-action="Details" asp-route-id="@item.show_id"
                    class="btn btn-primary">Details</a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>

    <partial name="_Pagination" />

}
else
{
    <br />

    <p> No shows have been entered into the database. </p>

    <br />
}