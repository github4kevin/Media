@model cloudscribe.Pagination.Models.PagedResult<Duplicates>

@{
    ViewData["Title"] = "Duplicates";
    ViewData["Controller"] = "Duplicates";
    ViewData["Action"] = "Index";
    int RowNumber = 0;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<partial name="_HeaderSearch" />

<br />

<div class="container">
    <p> &nbsp; &nbsp; </p>
    </br>
    <partial name="_Pagination" />
</div>

<br />

@if (Model.Data.Count() > 0)
{
    <div class="container">
        <div class="col-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Row
                        </th>
                        <th class='text-nowrap'>
                            <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                            asp-route-sortOrder="@ViewBag.MediaNameSort" asp-route-pageNumber="@Model.PageNumber">
                                <i class="fas fa-sort"></i>
                                Name
                            </a>
                        </th>
                        <th class='text-nowrap'>
                            <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                            asp-route-sortOrder="@ViewBag.MediaTypeSort" asp-route-pageNumber="@Model.PageNumber">
                                <i class="fas fa-sort"></i>
                                Type
                            </a>
                        </th>
                        <th class='text-nowrap'>
                            <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                            asp-route-sortOrder="@ViewBag.MediaSizeSort" asp-route-pageNumber="@Model.PageNumber">
                                <i class="fas fa-sort"></i>
                                Size
                            </a>
                        </th>
                        <th class='text-nowrap'>
                            <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                            asp-route-sortOrder="@ViewBag.MediaQualitySort" asp-route-pageNumber="@Model.PageNumber">
                                <i class="fas fa-sort"></i>
                                Quality
                            </a>
                        </th>
                        <th class='text-nowrap'>
                            <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                            asp-route-sortOrder="@ViewBag.MediaDurationSort" asp-route-pageNumber="@Model.PageNumber">
                                <i class="fas fa-sort"></i>
                                Duration
                            </a>
                        </th>
                        <th class='text-nowrap'>
                            <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
                            asp-route-sortOrder="@ViewBag.MediaReleasedSort" asp-route-pageNumber="@Model.PageNumber">
                                <i class="fas fa-sort"></i>
                                Released
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        RowNumber = RowNumber + 1;
                        <tr>
                            <td>
                                @RowNumber
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.media_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.media_type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.media_size)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.media_quality)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.media_duration)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.media_released)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <partial name="_Pagination" />

}
else
{
    <br />

    <p align="left">No duplicate backups exists.</p>

    <br />
}