@model cloudscribe.Pagination.Models.PagedResult<Naming>

@{
   ViewData["Title"] = "Bad Naming";
   ViewData["Controller"] = "Naming";
   ViewData["Action"] = "Index";
   int RowNumber = 0;

   Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<partial name="_HeaderSearch" />

<br />

<div class="container">
   <p> &nbsp; &nbsp; </p>
   <br />
   <partial name="_Pagination" />
</div>

<br />

@if (Model.Data.Count() > 0)
{
   <table class="table table-striped table-bordered table-hover">
      <thead>
         <tr>
            <th>
               Row
            </th>
            <th class='text-nowrap'>
               <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
               asp-route-sortOrder="@ViewBag.ShowNameSort" asp-route-pageNumber="@Model.PageNumber">
                  <i class="fas fa-sort"></i>
                  Show
               </a>
            </th>
            <th class='text-nowrap'>
               <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
               asp-route-sortOrder="@ViewBag.SeasonNumerSort" asp-route-pageNumber="@Model.PageNumber">
                  <i class="fas fa-sort"></i>
                  Seasons
               </a>
            </th>
            <th class='text-nowrap'>
               <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
               asp-route-sortOrder="@ViewBag.TotalEpisodeSort" asp-route-pageNumber="@Model.PageNumber">
                  <i class="fas fa-sort"></i>
                  Episodes
               </a>
            </th>
            <th class='text-nowrap'>
               <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
               asp-route-sortOrder="@ViewBag.TotalSizeSort" asp-route-pageNumber="@Model.PageNumber">
                  <i class="fas fa-sort"></i>
                  Size
               </a>
            </th>
            <th class='text-nowrap'>
               <a asp-action=@ViewData["Action"] asp-route-GlobalSearch="@ViewBag.CurrentSearch"
               asp-route-sortOrder="@ViewBag.DurationSort" asp-route-pageNumber="@Model.PageNumber">
                  <i class="fas fa-sort"></i>
                  Duration
               </a>
            </th>
         </tr>
      </thead>
      <tbody>
         @foreach (var item in Model.Data)
         {
            RowNumber = RowNumber + 1;
            <tr>
               <td>
                  @RowNumber
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.show_name)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.season_number)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.total_episodes)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.total_size)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.total_duration)
               </td>
            </tr>
         }
      </tbody>
   </table>

   <partial name="_Pagination" />

}
else
{
   <br />

   <p align="left"> No badly named episodes exists in the database. </p>

   <br />
}